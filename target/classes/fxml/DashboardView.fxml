<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../style/dashboard-style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="app.tracktune.controller.DashboardController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="12.0" styleClass="sidebar">
            <children>
                <Label styleClass="sidebar-title" text="TRACKTUNE" />
                <Button styleClass="sidebar-button" text="Dashboard" />
                <Button styleClass="sidebar-button" text="Utenti" />
                <Button styleClass="sidebar-button" text="Brani" />
                <Button styleClass="sidebar-button" text="Impostazioni" />
                <Region fx:id="spacer" VBox.vgrow="ALWAYS" />
                <Button styleClass="logout-button" text="Logout" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="mainContent" styleClass="main-content">
            <Label styleClass="main-title" text="Benvenuto su TrackTune!" />
        </StackPane>
    </center>
</BorderPane>
