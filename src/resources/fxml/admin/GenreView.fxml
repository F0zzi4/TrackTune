<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../../style/genres-style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="app.tracktune.controller.admin.GenreController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <Label prefHeight="84.0" prefWidth="158.0" style="-fx-font-size: 35; -fx-alignment: center;" styleClass="label-title" text="Genres" />

            <!-- Add genre form -->
            <VBox fx:id="addGenreBox" spacing="8" alignment="CENTER" maxWidth="500">
                <TextField fx:id="nameField" promptText="Genre name" styleClass="nameField" />
                <TextArea fx:id="descriptionField" promptText="Description (max 300 characters)" wrapText="true" prefRowCount="4" styleClass="descriptionField"/>
                <Label fx:id="charCountLabel" text="0/300" styleClass="char-count-label" />
                <Button fx:id="addGenreButton" text="Add" styleClass="accept-button">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-account-plus" iconSize="20" />
                    </graphic>
                </Button>
            </VBox>

            <!-- Genre cards -->
            <VBox fx:id="requestsContainer" spacing="10.0" />

            <!-- Pagination -->
            <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="prevButton" styleClass="switch-button" text="Previous">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-arrow-left-drop-circle" iconSize="20" />
                    </graphic>
                </Button>
                <Button fx:id="nextButton" styleClass="switch-button" text="Next">
                    <graphic>
                        <FontIcon iconLiteral="mdi2a-arrow-right-drop-circle" iconSize="20" />
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </children>
</StackPane>
