<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="600.0" prefWidth="800.0" styleClass="split-pane-divider" stylesheets="@../../style/resources-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.tracktune.controller.authenticatedUser.ResourcesController">
    <children>
        <VBox alignment="CENTER" maxWidth="500" prefHeight="491.0" prefWidth="500.0" spacing="12">

            <Label prefHeight="44.0" prefWidth="323.0" styleClass="section-title-label" text="New Resource">
                <graphic>
                    <FontIcon iconLiteral="mdi2m-music-box-multiple" iconSize="27" />
                </graphic>
            </Label>
         <Region prefHeight="71.0" prefWidth="500.0" />

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-alignment: center;">
                <Label styleClass="label-title" text="Author:" />
                <ComboBox fx:id="authorComboBox" prefWidth="300">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Author A" />
                            <String fx:value="Author B" />
                            <String fx:value="Author C" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
         <Region prefHeight="30.0" prefWidth="500.0" />

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-alignment: center;">
                <Label styleClass="label-title" text="File:" />
                <TextField fx:id="filePathField" editable="false" prefWidth="240" promptText="Choose a file..." />
                <Button fx:id="btnBrowseFile" styleClass="switch-button">
                    <graphic>
                        <FontIcon iconLiteral="mdi2f-file-find" iconSize="18" />
                    </graphic>
                </Button>
            </HBox>
         <Region prefHeight="79.0" prefWidth="500.0" />

            <Button fx:id="btnAddResource" styleClass="switch-button" text="Add">
                <graphic>
                    <FontIcon iconLiteral="mdi2f-file-music" iconSize="20" />
                </graphic>
            </Button>
         <Region prefHeight="97.0" prefWidth="500.0" />
        </VBox>
    </children>
</StackPane>
